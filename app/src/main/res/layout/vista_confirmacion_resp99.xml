<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:background="@color/white">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#FFFFFF"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="60dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginStart="31dp"
                android:adjustViewBounds="true"
                android:contentDescription="LogoToolbar"
                app:srcCompat="@drawable/logo_mivecino" />
        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/materialprimary"
        android:gravity="center"
        android:text="Ingresa los datos de depÃ³sito"
        android:textColor="@color/blueText"
        android:layout_below="@+id/toolbar"
        android:textSize="22sp"
        android:textAllCaps="false"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_below="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="166dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="198dp"
            android:windowSoftInputMode="adjustResize"
            android:layout_below="@+id/toolbar">

            <RelativeLayout
                android:id="@+id/Relative1"
                android:layout_width="match_parent"
                android:layout_height="196dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:padding="10dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="164dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/ms1"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:textColor="@color/blueText" />

                        <TextView
                            android:id="@+id/ms2"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginTop="6dp"
                            android:gravity="center"
                            android:textColor="@color/blueText" />

                        <TextView
                            android:id="@+id/ms3"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginTop="6dp"
                            android:gravity="center"
                            android:textColor="@color/blueText" />

                        <TextView
                            android:id="@+id/ms4"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginTop="6dp"
                            android:gravity="center"
                            android:textColor="@color/blueText" />

                        <TextView
                            android:id="@+id/ms5"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginTop="6dp"
                            android:gravity="center"
                            android:textColor="@color/blueText" />

                    </LinearLayout>
                </ScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="130dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvMSG1"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="10dp"
                        android:gravity="end|center"
                        android:text="Monto:"
                        android:textColor="@color/blueText"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/etMonto"
                        android:layout_width="140dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/edittext_pichi"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="10"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/black"
                        android:textSize="16sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txtErrorMonto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="161dp"
                    android:layout_marginLeft="160dp"
                    android:textColor="@color/red"
                    android:textSize="12sp" />

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="130dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="40dp"
        android:layout_above="@+id/banner"
        android:background="@drawable/pichi_btn_sub_cancelar"
        android:text="@string/btn_cancel"
        android:textAllCaps="false"
        android:textColor="@color/blueText"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnAccept"
        android:layout_width="130dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="40dp"
        android:background="@drawable/pichi_btn_sub_aceptar"
        android:text="@string/btn_accept"
        android:textAllCaps="false"
        android:layout_above="@+id/banner"
        android:textColor="@color/blueText"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <cnb.pichincha.wposs.mivecino_pichincha.screens.BannerInferior
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </LinearLayout>

</RelativeLayout>
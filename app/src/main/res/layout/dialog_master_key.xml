<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/fondo_pichincha"
    android:id="@+id/dialog_signin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="202dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/pichi_logo_doble" />

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/cancel"
            android:textSize="14dp" />

        <Button
            android:id="@+id/button_ingresar"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_above="@id/cancel"
            android:layout_centerHorizontal="true"
            android:background="@drawable/pichi_btn_sub_aceptar"
            android:text="Continuar"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/blueText" />

        <EditText
            android:id="@+id/password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="184dp"
            android:ems="10"
            android:hint="Ingresar contraseÃ±a Master Key"
            android:inputType="numberPassword"
            android:textColor="@color/blueText"
            android:background="@drawable/edittext_pichi"
            android:maxLength="6"
            android:padding="20dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/txtErrorDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="160dp"
            android:textColor="@color/red"
            android:textSize="12sp" />

    </RelativeLayout>


</RelativeLayout>